<p id="notice"><%= notice %></p>
<div class="container">
<div class="btn-group" style="color:#0000FF">
<button class="btn btn-success btn-block">
<h1>Subgenres</h1>
</button>
</div>
<br>
<table class="table table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subgenres.each do |subgenre| %>
      <tr>
        <td><%= subgenre.title %></td>
        <td><%= subgenre.genre.title %></td>
        <td><%= link_to 'leaderboard','/trackers/leaderboard/' + (subgenre.id).to_s %></td>
        <td><%= link_to 'view','/subgenres/'+(subgenre.id).to_s+'/questions/' %></td>
        <td><%= link_to 'Reset Quiz' , '/reset/subgenres'%></td>
<!--         <td><%= link_to 'restart','/subgenres/'+(subgenre.id).to_s+'/questions/reset' %></td> -->
        <!--<td><%= link_to 'Show', subgenre %></td>
        <td><%= link_to 'Edit', edit_subgenre_path(subgenre) %></td>
        <td><%= link_to 'Destroy', subgenre, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', '/genres'%>
